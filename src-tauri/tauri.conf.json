{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "echidna-app",
  "version": "0.0.1",
  "identifier": "com.echidna-app.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Echidna Puzzle Solver - https://cw.xnojustice.dev/",
        "resizable": true,
        "width": 450,
        "height": 450
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
